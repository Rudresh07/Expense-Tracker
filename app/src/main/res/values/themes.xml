<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ExpenseTracker.SplashScreen" parent="Theme.SplashScreen">

        <item name="android:windowBackground">@color/orange</item>
        <item name="postSplashScreenTheme">@style/Theme.ExpenseTracker.NoStatusBar</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
